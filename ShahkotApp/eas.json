{
    "cli": {
        "version": ">= 3.0.0",
        "appVersionSource": "remote"
    },
    "build": {
        "simulator": {
            "ios": {
                "simulator": true
            },
            "env": {
                "EXPO_PUBLIC_API_URL": "https://shahkotian.onrender.com/api",
                "EXPO_PUBLIC_SKIP_GEOFENCE": "true"
            }
        },
        "preview": {
            "android": {
                "buildType": "apk"
            },
            "env": {
                "EXPO_PUBLIC_API_URL": "https://shahkotian.onrender.com/api",
                "EXPO_PUBLIC_SKIP_GEOFENCE": "true"
            }
        },
        "production": {
            "android": {
                "buildType": "apk"
            },
            "env": {
                "EXPO_PUBLIC_API_URL": "https://shahkotian.onrender.com/api",
                "EXPO_PUBLIC_SKIP_GEOFENCE": "true"
            }
        }
    }
}