// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============ ENUMS ============

enum Role {
  USER
  VERIFIED_USER
  NEWS_REPORTER
  ADMIN
}

enum RishtaStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ListingCategory {
  ELECTRONICS
  VEHICLES
  PROPERTY
  FURNITURE
  CLOTHING
  SPORTS
  BOOKS
  HOME_APPLIANCES
  MOBILE_PHONES
  OTHER
}

enum SportType {
  CRICKET
  FOOTBALL
  KABADDI
  VOLLEYBALL
  HOCKEY
  BADMINTON
  TABLE_TENNIS
  OTHER
}

enum NewsCategory {
  LOCAL
  SPORTS
  EDUCATION
  POLITICS
  BUSINESS
  HEALTH
  ENTERTAINMENT
  OTHER
}

enum BloodGroup {
  A_POSITIVE
  A_NEGATIVE
  B_POSITIVE
  B_NEGATIVE
  AB_POSITIVE
  AB_NEGATIVE
  O_POSITIVE
  O_NEGATIVE
}

// ============ MODELS ============

model User {
  id            String   @id @default(uuid())
  name          String
  phone         String   @unique
  email         String?  @unique
  whatsapp      String?
  photoUrl      String?
  role          Role     @default(USER)
  firebaseUid   String   @unique
  latitude      Float?
  longitude     Float?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  isBlocked     Boolean  @default(false)

  posts         Post[]
  comments      Comment[]
  likes         Like[]
  listings      Listing[]
  rishtaProfile RishtaProfile?
  notifications Notification[]
  bloodDonors   BloodDonor[]
  shops         Shop[]
  chatMessages  ChatMessage[]
  sentInterests RishtaInterest[]  @relation("SentInterests")
  shortlists    RishtaShortlist[] @relation("UserShortlists")

  @@index([latitude, longitude])
}

model Post {
  id        String   @id @default(uuid())
  userId    String
  text      String?
  images    String[] // Array of Cloudinary URLs
  videos    String[] // Array of Cloudinary video URLs
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments Comment[]
  likes    Like[]

  @@index([createdAt(sort: Desc)])
}

model Comment {
  id        String   @id @default(uuid())
  postId    String
  userId    String
  text      String
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Like {
  id     String @id @default(uuid())
  postId String
  userId String

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
}

model Listing {
  id          String          @id @default(uuid())
  userId      String
  title       String
  description String
  price       Float
  category    ListingCategory
  images      String[] // Max 5 images, NO videos
  whatsapp    String // Mandatory
  isSold      Boolean         @default(false)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([category])
  @@index([createdAt(sort: Desc)])
}

model Tournament {
  id          String    @id @default(uuid())
  sport       SportType
  name        String
  description String
  image       String? // One image only
  venue       String
  startDate   DateTime
  endDate     DateTime?
  createdById String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  matches Match[]

  @@index([sport])
  @@index([endDate])
}

model Match {
  id           String   @id @default(uuid())
  tournamentId String
  team1        String
  team2        String
  date         DateTime
  time         String
  venue        String
  result       String?
  createdAt    DateTime @default(now())

  tournament Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  @@index([date])
}

model GovtOffice {
  id          String   @id @default(uuid())
  name        String
  address     String
  latitude    Float?
  longitude   Float?
  helplines   String[] // Array of phone numbers
  timings     String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Shop {
  id          String   @id @default(uuid())
  name        String
  address     String
  contact     String
  categories  String[] // What they sell: "shoes", "mobile", etc.
  description String?
  ownerId     String?
  owner       User?    @relation(fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([categories])
  @@index([ownerId])
}

model RishtaProfile {
  id             String       @id @default(uuid())
  userId         String       @unique
  cnicFront      String // Image URL
  cnicBack       String // Image URL
  age            Int
  gender         String
  education      String
  occupation     String
  familyDetails  String?
  preferences    String?
  images         String[] // Profile images, NO videos
  signatureAgreed Boolean     @default(false) // Digital agreement
  agreementText  String? // The actual agreement text signed
  status         RishtaStatus @default(PENDING)
  adminNote      String?
  approvedAt     DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  interests     RishtaInterest[]  @relation("ReceivedInterests")
  shortlistedBy RishtaShortlist[]
}

model RishtaInterest {
  id         String   @id @default(uuid())
  fromUserId String
  profileId  String
  status     String   @default("PENDING") // PENDING, ACCEPTED, REJECTED
  createdAt  DateTime @default(now())

  fromUser User          @relation("SentInterests", fields: [fromUserId], references: [id], onDelete: Cascade)
  profile  RishtaProfile @relation("ReceivedInterests", fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([fromUserId, profileId])
  @@index([profileId])
  @@index([fromUserId])
}

model RishtaShortlist {
  id        String   @id @default(uuid())
  userId    String
  profileId String
  createdAt DateTime @default(now())

  user    User          @relation("UserShortlists", fields: [userId], references: [id], onDelete: Cascade)
  profile RishtaProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([userId, profileId])
  @@index([userId])
}

model NewsReporter {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String // Hashed
  name       String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())

  news News[]
}

model News {
  id         String       @id @default(uuid())
  reporterId String?
  title      String
  content    String
  images     String[]
  category   NewsCategory
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  reporter NewsReporter? @relation(fields: [reporterId], references: [id], onDelete: SetNull)

  @@index([createdAt(sort: Desc)])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  body      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
}

model PoliceAnnouncement {
  id          String   @id @default(uuid())
  title       String
  content     String
  category    String   @default("GENERAL") // GENERAL, SAFETY, MISSING_PERSON, WANTED, TRAFFIC, EMERGENCY
  images      String[]
  isUrgent    Boolean  @default(false)
  contactNumber String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([createdAt(sort: Desc)])
}

model LiveEvent {
  id          String   @id @default(uuid())
  title       String
  description String?
  streamUrl   String?  // YouTube/Facebook live URL, or RTMP URL
  videoUrl    String?  // Saved video URL (uploaded/recorded)
  thumbnailUrl String?
  category    String   @default("GENERAL") // SPORTS, RELIGIOUS, CULTURAL, POLITICAL, GENERAL
  isLive      Boolean  @default(false)
  scheduledAt DateTime?
  endedAt     DateTime?
  venue       String?
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isLive])
  @@index([createdAt(sort: Desc)])
}

model ChatMessage {
  id        String   @id @default(uuid())
  userId    String
  text      String?
  images    String[]
  videos    String[]
  voiceUrl  String?
  replyToId String?
  createdAt DateTime @default(now())

  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  replyTo ChatMessage? @relation("ReplyTo", fields: [replyToId], references: [id], onDelete: SetNull)
  replies ChatMessage[] @relation("ReplyTo")

  @@index([createdAt(sort: Desc)])
}

model BloodDonor {
  id          String     @id @default(uuid())
  userId      String
  name        String
  phone       String
  whatsapp    String?
  bloodGroup  BloodGroup
  address     String?
  isAvailable Boolean    @default(true)
  isEmergency Boolean    @default(false)
  lastDonated DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([bloodGroup])
  @@index([isAvailable])
  @@index([isEmergency])
}
