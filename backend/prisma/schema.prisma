// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============ ENUMS ============

enum Role {
  USER
  VERIFIED_USER
  NEWS_REPORTER
  ADMIN
}

enum RishtaStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ListingCategory {
  ELECTRONICS
  VEHICLES
  PROPERTY
  FURNITURE
  CLOTHING
  SPORTS
  BOOKS
  HOME_APPLIANCES
  MOBILE_PHONES
  OTHER
}

enum SportType {
  CRICKET
  FOOTBALL
  KABADDI
  VOLLEYBALL
  HOCKEY
  BADMINTON
  TABLE_TENNIS
  OTHER
}

enum NewsCategory {
  LOCAL
  SPORTS
  EDUCATION
  POLITICS
  BUSINESS
  HEALTH
  ENTERTAINMENT
  OTHER
}

enum BloodGroup {
  A_POSITIVE
  A_NEGATIVE
  B_POSITIVE
  B_NEGATIVE
  AB_POSITIVE
  AB_NEGATIVE
  O_POSITIVE
  O_NEGATIVE
}

// ============ MODELS ============

model User {
  id            String   @id @default(uuid())
  name          String
  phone         String?  @unique
  email         String?  @unique
  whatsapp      String?
  password      String?  // Hashed password - required for new users
  photoUrl      String?
  role          Role     @default(USER)
  firebaseUid   String?  @unique
  latitude      Float?
  longitude     Float?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  isBlocked     Boolean  @default(false)
  lastSeenAt    DateTime?

  posts         Post[]
  comments      Comment[]
  likes         Like[]
  listings      Listing[]
  rishtaProfile RishtaProfile?
  notifications Notification[]
  bloodDonors   BloodDonor[]
  shops         Shop[]
  newsArticles  News[]
  chatMessages  ChatMessage[]
  sentInterests RishtaInterest[]  @relation("SentInterests")
  shortlists    RishtaShortlist[] @relation("UserShortlists")

  // DM relations
  dmChatsAsUser1  DMChat[]    @relation("DMUser1")
  dmChatsAsUser2  DMChat[]    @relation("DMUser2")
  dmMessages      DMMessage[] @relation("DMSender")
  reportsSubmitted Report[]   @relation("ReportSubmitter")
  reportsReceived  Report[]   @relation("ReportTarget")
  blockedUsers     Block[]    @relation("Blocker")
  blockedByUsers   Block[]    @relation("Blocked")
  jobs             Job[]
  jobApplications  JobApplication[]

  @@index([latitude, longitude])
}

model Post {
  id        String   @id @default(uuid())
  userId    String
  text      String?
  images    String[] // Array of Cloudinary URLs
  videos    String[] // Array of Cloudinary video URLs
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments Comment[]
  likes    Like[]

  @@index([createdAt(sort: Desc)])
  @@index([userId])
}

model Comment {
  id        String   @id @default(uuid())
  postId    String
  userId    String
  text      String
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([userId])
}

model Like {
  id     String @id @default(uuid())
  postId String
  userId String

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
}

model Listing {
  id          String          @id @default(uuid())
  userId      String
  title       String
  description String
  price       Float
  category    ListingCategory
  images      String[] // Max 5 images, NO videos
  whatsapp    String // Mandatory
  isSold      Boolean         @default(false)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([category])
  @@index([createdAt(sort: Desc)])
  @@index([userId])
  @@index([isSold, category, createdAt(sort: Desc)])
}

model Tournament {
  id            String    @id @default(uuid())
  sport         SportType
  name          String
  description   String
  image         String?
  venue         String
  startDate     DateTime
  endDate       DateTime?
  createdById   String?
  teams         String[]  @default([])
  prize         String?
  entryFee      Int?
  contactNumber String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  matches Match[]

  @@index([sport])
  @@index([endDate])
}

model Match {
  id           String    @id @default(uuid())
  tournamentId String
  team1        String
  team2        String
  date         DateTime  @default(now())
  time         String    @default("")
  venue        String    @default("")
  result       String?
  round        String?
  score        String?
  createdAt    DateTime  @default(now())

  tournament Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  @@index([date])
  @@index([tournamentId])
}

model GovtOffice {
  id          String   @id @default(uuid())
  name        String
  address     String
  latitude    Float?
  longitude   Float?
  helplines   String[] // Array of phone numbers
  timings     String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Shop {
  id          String   @id @default(uuid())
  name        String
  address     String
  contact     String
  categories  String[] // What they sell: "shoes", "mobile", etc.
  description String?
  ownerId     String?
  owner       User?    @relation(fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([categories])
  @@index([ownerId])
}

model RishtaProfile {
  id             String       @id @default(uuid())
  userId         String       @unique
  cnicFront      String // Image URL
  cnicBack       String // Image URL
  age            Int
  gender         String
  education      String
  occupation     String
  familyDetails  String?
  preferences    String?
  images         String[] // Profile images, NO videos
  signatureAgreed Boolean     @default(false) // Digital agreement
  agreementText  String? // The actual agreement text signed
  status         RishtaStatus @default(PENDING)
  adminNote      String?
  approvedAt     DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  interests     RishtaInterest[]  @relation("ReceivedInterests")
  shortlistedBy RishtaShortlist[]

  @@index([status])
}

model RishtaInterest {
  id         String   @id @default(uuid())
  fromUserId String
  profileId  String
  status     String   @default("PENDING") // PENDING, ACCEPTED, REJECTED
  createdAt  DateTime @default(now())

  fromUser User          @relation("SentInterests", fields: [fromUserId], references: [id], onDelete: Cascade)
  profile  RishtaProfile @relation("ReceivedInterests", fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([fromUserId, profileId])
  @@index([profileId])
  @@index([fromUserId])
}

model RishtaShortlist {
  id        String   @id @default(uuid())
  userId    String
  profileId String
  createdAt DateTime @default(now())

  user    User          @relation("UserShortlists", fields: [userId], references: [id], onDelete: Cascade)
  profile RishtaProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([userId, profileId])
  @@index([userId])
}

model NewsReporter {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String // Hashed
  name       String
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())

  news News[]
}

model News {
  id         String       @id @default(uuid())
  reporterId String?
  userId     String?      // Allow regular users to post news
  title      String
  content    String
  images     String[]
  category   NewsCategory
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  reporter NewsReporter? @relation(fields: [reporterId], references: [id], onDelete: SetNull)
  user     User?         @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([createdAt(sort: Desc)])
  @@index([category])
  @@index([userId])
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  body      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
}

model ChatMessage {
  id        String   @id @default(uuid())
  userId    String
  text      String?
  images    String[]
  videos    String[]
  voiceUrl       String?
  voiceDuration  Int?     // duration in seconds
  replyToId String?
  createdAt DateTime @default(now())

  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  replyTo ChatMessage? @relation("ReplyTo", fields: [replyToId], references: [id], onDelete: SetNull)
  replies ChatMessage[] @relation("ReplyTo")

  @@index([createdAt(sort: Desc)])
  @@index([userId])
}

model BloodDonor {
  id          String     @id @default(uuid())
  userId      String
  name        String
  phone       String
  whatsapp    String?
  bloodGroup  BloodGroup
  address     String?
  isAvailable Boolean    @default(true)
  isEmergency Boolean    @default(false)
  lastDonated DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([bloodGroup])
  @@index([isAvailable])
  @@index([isEmergency])
  @@index([userId])
}

// ============ DM (DIRECT MESSAGING) ============

model DMChat {
  id        String   @id @default(uuid())
  user1Id   String
  user2Id   String
  source    String   @default("GENERAL") // RISHTA, GENERAL
  isBlocked Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user1    User        @relation("DMUser1", fields: [user1Id], references: [id], onDelete: Cascade)
  user2    User        @relation("DMUser2", fields: [user2Id], references: [id], onDelete: Cascade)
  messages DMMessage[]

  @@unique([user1Id, user2Id])
  @@index([user1Id])
  @@index([user2Id])
  @@index([updatedAt(sort: Desc)])
}

model DMMessage {
  id        String   @id @default(uuid())
  chatId    String
  senderId  String
  text      String?
  images    String[] // Cloudinary URLs
  createdAt DateTime @default(now())

  chat   DMChat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender User   @relation("DMSender", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([chatId, createdAt(sort: Desc)])
  @@index([senderId])
}

model Report {
  id             String   @id @default(uuid())
  reporterUserId String
  targetUserId   String
  targetType     String   // DM_MESSAGE, POST, USER, etc.
  targetId       String
  reason         String
  status         String   @default("PENDING") // PENDING, REVIEWED, RESOLVED
  createdAt      DateTime @default(now())

  reporter User @relation("ReportSubmitter", fields: [reporterUserId], references: [id], onDelete: Cascade)
  target   User @relation("ReportTarget", fields: [targetUserId], references: [id], onDelete: Cascade)

  @@index([reporterUserId])
  @@index([targetUserId])
  @@index([status])
}

model Block {
  id        String   @id @default(uuid())
  blockerId String
  blockedId String
  createdAt DateTime @default(now())

  blocker User @relation("Blocker", fields: [blockerId], references: [id], onDelete: Cascade)
  blocked User @relation("Blocked", fields: [blockedId], references: [id], onDelete: Cascade)

  @@unique([blockerId, blockedId])
  @@index([blockerId])
  @@index([blockedId])
}

// ============ EMAIL OTP ============

model EmailOtp {
  id        String   @id @default(uuid())
  email     String
  otp       String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email])
}

// ============ JOBS ============

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
  DAILY_WAGE
}

enum JobCategory {
  TEACHING
  MEDICAL
  IT
  DRIVING
  LABOUR
  SHOP_WORK
  OFFICE
  COOKING
  TAILORING
  AGRICULTURE
  OTHER
}

model Job {
  id           String      @id @default(uuid())
  userId       String
  title        String
  company      String
  description  String
  category     JobCategory
  type         JobType     @default(FULL_TIME)
  salary       String?     // e.g., "20,000 - 30,000 PKR" or "Negotiable"
  location     String      @default("Shahkot")
  phone        String
  whatsapp     String?
  requirements String?
  isActive     Boolean     @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  applications JobApplication[]

  @@index([category])
  @@index([type])
  @@index([createdAt(sort: Desc)])
  @@index([userId])
  @@index([isActive, createdAt(sort: Desc)])
}

model JobApplication {
  id        String   @id @default(uuid())
  jobId     String
  userId    String
  message   String?
  phone     String
  createdAt DateTime @default(now())

  job  Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([jobId, userId])
  @@index([jobId])
  @@index([userId])
}

// ============ DOCTORS & CLINICS ============

enum DoctorSpecialty {
  GENERAL_PHYSICIAN
  PEDIATRICIAN
  GYNECOLOGIST
  CARDIOLOGIST
  DERMATOLOGIST
  ENT
  ORTHOPEDIC
  DENTIST
  OPHTHALMOLOGIST
  NEUROLOGIST
  PSYCHIATRIST
  UROLOGIST
  HOMEOPATHIC
  HAKEEM
  OTHER
}

model Doctor {
  id           String           @id @default(uuid())
  name         String
  specialty    DoctorSpecialty
  clinicName   String?
  address      String
  phone        String
  whatsapp     String?
  timings      String?          // e.g., "Mon-Sat: 5PM-9PM"
  fee          Int?             // Consultation fee in PKR
  education    String?          // e.g., "MBBS, FCPS"
  experience   String?          // e.g., "15 years"
  isVerified   Boolean          @default(false)
  latitude     Float?
  longitude    Float?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  @@index([specialty])
  @@index([name])
}
