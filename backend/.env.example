# ============ DATABASE ============
# Single database (backward compatible):
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/shahkot_db?schema=public"

# Multiple databases (comma-separated) - for scaling beyond free tier:
# DATABASE_URLS="postgresql://user:pass@host1/db1,postgresql://user:pass@host2/db2,postgresql://user:pass@host3/db3"

# Which database to use (0 = first, 1 = second, etc.)
ACTIVE_DB_INDEX=0

# Optional: DB size limit (MB) to trigger rotation
DB_SIZE_LIMIT_MB=450

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="30d"

# Firebase (Download serviceAccountKey.json from Firebase Console)
FIREBASE_PROJECT_ID="your-firebase-project-id"

# Cloudinary
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Email (SendGrid or Gmail)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"

# App Config
PORT=5000
SHAHKOT_LAT=31.9712
SHAHKOT_LNG=73.4818
GEOFENCE_RADIUS_KM=50

# Admin Setup
ADMIN_PHONE="+923001234567"
ADMIN_EMAIL="admin@shahkotapp.com"

# Video limits
MAX_VIDEO_DURATION_SECONDS=180
MAX_VIDEO_SIZE_MB=100

# Geofencing (set to true to disable location restrictions for testing)
SKIP_GEOFENCE=false

# LongCat AI (OPTIONAL - Leave commented to use built-in fallback responses)
# If you have a LongCat API key, uncomment and add it here for AI-powered chatbot
# Otherwise, chatbot will use keyword-based fallback responses (works offline)
# LONGCAT_API_KEY="your-longcat-api-key-here"
# LONGCAT_API_URL="https://api.longcat.chat/openai/v1/chat/completions"
# LONGCAT_MODEL="LongCat-Flash-Chat"
